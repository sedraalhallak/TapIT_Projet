<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/purple"
    android:padding="0dp">

    <!-- Avatar de l'utilisateur -->
    <ImageView
        android:id="@+id/profileAvatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="top|start"
        android:layout_margin="30dp"
        android:background="@drawable/circle_background"
        android:contentDescription="Profil"
        android:scaleType="centerCrop"
        android:src="@drawable/a1" />
    <!-- Intro avant de commencer le quiz -->
    <LinearLayout
        android:id="@+id/introLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">


    <TextView
            android:id="@+id/introText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TimeForAQuiz"
            android:textSize="26sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/font6"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/startQuizButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Start"
            android:background="@drawable/custom_back_button"
            android:textColor="@android:color/white"/>
    </LinearLayout>


    <!-- Timer pour chaque question -->
    <TextView
        android:id="@+id/globalTimerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font6"
        android:text="Temps global restant: 20"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <!-- Button Rejouer -->
    <Button
        android:id="@+id/replayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Replay"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_back_button"
        android:textColor="@android:color/white"/>

    <!-- Question du quiz -->
    <TextView
        android:id="@+id/quizQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Question"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:fontFamily="@font/font6"
        android:layout_gravity="center_horizontal" />

    <!-- Layout des réponses du quiz -->
    <LinearLayout
        android:id="@+id/quizAnswersLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp"/>

    <!-- Espace vide pour pousser la barre de navigation en bas -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Barre de navigation avec icônes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp"
        android:background="@android:color/transparent">

        <!-- Bouton Accueil -->
        <LinearLayout
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_home"
                android:scaleType="centerInside"
                android:contentDescription="Home icon"/>
        </LinearLayout>

        <!-- Bouton Musique -->
        <LinearLayout
            android:id="@+id/musicButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_music"
                android:scaleType="centerInside"
                android:contentDescription="Music icon"/>
        </LinearLayout>

        <!-- Bouton Favoris -->
        <LinearLayout
            android:id="@+id/favoriteButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_favorite"
                android:scaleType="centerInside"
                android:contentDescription="Favorite icon"/>
        </LinearLayout>

        <!-- Bouton Paramètres -->
        <LinearLayout
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_settings"
                android:scaleType="centerInside"
                android:contentDescription="Settings icon"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
