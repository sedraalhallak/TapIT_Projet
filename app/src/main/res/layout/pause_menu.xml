<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:padding="16dp">

    <!-- Style commun pour tous les boutons -->
    <Button
        android:id="@+id/resume_button"
        android:fontFamily="@font/font6"
        android:text="RESUME"
        android:textSize="22sp"
        android:textStyle="bold"
        android:shadowColor="#db719b"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:minWidth="210dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/custom_back_button"
        android:contentDescription="Resume the game" />

    <Button
        android:id="@+id/restart_button"
        android:fontFamily="@font/font6"

        android:text="RESTART"
        android:textSize="22sp"
        android:textStyle="bold"
        android:shadowColor="#db719b"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:minWidth="210dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/custom_back_button"
        android:contentDescription="Restart the game" />

    <Button
        android:id="@+id/settings_button"
        android:fontFamily="@font/font6"

        android:text="SETTINGS"
        android:textSize="22sp"
        android:textStyle="bold"
        android:shadowColor="#db719b"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:minWidth="210dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/custom_back_button"
        android:contentDescription="Open settings" />

    <Button
        android:id="@+id/home_button"
        android:fontFamily="@font/font6"

        android:text="HOME"
        android:textSize="22sp"
        android:textStyle="bold"
        android:shadowColor="#db719b"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:minWidth="210dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/custom_back_button"
        android:contentDescription="Return to home screen" />

</LinearLayout>
