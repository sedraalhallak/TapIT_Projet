<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/purple"
    android:padding="20dp"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:contentDescription="Fermer"
            android:clickable="true"
            android:focusable="true" />


    </RelativeLayout>

    <!-- Titre centré en haut -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ModifierleProfil"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="@font/font6"

        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"/>

    <!-- Avatar centré -->
    <ImageView
        android:id="@+id/editAvatarImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_default_avatar"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        android:layout_marginBottom="30dp"/>

    <!-- Conteneur pour les champs de saisie -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <!-- Champ Nom d'utilisateur -->
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/font6"

            android:layout_height="wrap_content"
            android:text="@string/NomUtilisateur"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/VotrenomdUtilisateur"
            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:padding="10dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/editBio"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/Bio"
            android:maxLength="160"
            android:minLines="1"
            android:maxLines="2"
            android:inputType="textMultiLine"
            android:textColorHint="#AAAAAA"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:textColor="#FFFFFF"/>



    </LinearLayout>

    <!-- Bouton Enregistrer -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/Enregistrer"
        android:background="@drawable/custom_back_button"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"/>
</LinearLayout>