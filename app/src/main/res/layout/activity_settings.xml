<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/play"
    android:padding="20dp">

    <!-- Titre Settings avec effet néon en majuscule et en gras -->
    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:textSize="50sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:shadowColor="#ffffff"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="15" />

    <!-- Menu déroulant pour le choix de la langue -->
    <LinearLayout
        android:id="@+id/language_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_title"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <!-- TextView Langue -->
        <TextView
            android:id="@+id/langue_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Langue"

            android:textColor="#FFFFFF"
            android:shadowColor="#FFFFFFFF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15"
            android:textSize="20sp"
            android:layout_marginEnd="10dp" />

        <!-- Affichage de la langue actuelle -->
        <TextView
            android:id="@+id/current_language"

            android:text="English"

            android:layout_marginStart="10dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:layout_height="48dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:textColor="#0097b2"
            android:shadowColor="#FFFFFFFF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"/>

        <!-- Spinner pour les langues (initialement caché) -->
        <Spinner
            android:id="@+id/language_spinner"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:entries="@array/languages"
            android:visibility="gone"
            android:textColor="#0097b2"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_background"
            />
    </LinearLayout>

    <!-- Curseur de volume -->
    <SeekBar
        android:id="@+id/volume_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/language_layout"
        android:layout_marginTop="30dp"
        android:max="100"
        android:progress="50"
        android:thumbTint="@android:color/white"
        android:progressTint="@android:color/white"
        android:layout_marginBottom="20dp"

        />

    <!-- Bouton pour couper le son -->
    <CheckBox
        android:id="@+id/mute_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mute Sound"
        android:textColor="@android:color/white"
        android:layout_below="@id/volume_slider"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:shadowColor="#FFFFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="15"
        android:textSize="20sp"
        android:layout_marginEnd="10dp"/>

    <!-- Barre de navigation en bas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#11293C"
        android:padding="0dp"
        android:weightSum="4"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home_button_selector"
            android:background="@null"
            android:contentDescription="Home"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/musicButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/music_button_selector"
            android:background="@null"
            android:contentDescription="Music"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/favoriteButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="Favorites"
            android:scaleType="centerInside"
            android:src="@drawable/favorite_button_selector" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="Settings"
            android:scaleType="centerInside"
            android:src="@drawable/settings_button_selector" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/loginIcon"
        android:layout_width="40dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Login"
        android:scaleType="centerInside"
        android:src="@drawable/ic_login" />


</RelativeLayout>
