<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple">

    <!-- Avatar/Profile -->
    <ImageView
        android:id="@+id/profileAvatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="30dp"
        android:background="@drawable/circle_background"
        android:contentDescription="Profil"
        android:scaleType="centerCrop"
        android:src="@drawable/a1" />

    <!-- Titre Settings en dessous de l'avatar -->
    <TextView
        android:fontFamily="@font/font6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settingsTitle"
        android:text="@string/Settings"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:layout_below="@id/profileAvatar"
        android:layout_centerHorizontal="true" />

    <!-- Section de langue -->
    <LinearLayout
        android:id="@+id/languageSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settingsTitle"
        android:gravity="center_vertical|start"
        android:orientation="horizontal"
        android:padding="20dp">

        <!-- Icône de traduction -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="Icône de traduction"
            android:scaleType="centerInside"
            android:src="@drawable/ic_translate" />

        <!-- Texte "Langue" -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/font6"
            android:gravity="start|center_vertical"
            android:text="@string/Langue"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Bouton pour changer de langue -->
        <Button
            android:id="@+id/changeLanguageBtn"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_back_button"
            android:fontFamily="@font/font6"
            android:gravity="center"
            android:paddingStart="40dp"
            android:paddingTop="12dp"
            android:paddingEnd="40dp"
            android:paddingBottom="12dp"
            android:text="@string/Changer"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Nouvelle section pour le bouton musique -->
    <LinearLayout
        android:id="@+id/musicSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/languageSection"
        android:gravity="center_vertical|start"
        android:orientation="horizontal"
        android:padding="20dp">

        <!-- Icône de musique -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="Icône de musique"
            android:scaleType="centerInside"
            android:src="@drawable/ic_music" />

        <!-- Texte "Musique" -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/font6"
            android:gravity="start|center_vertical"
            android:text="@string/Musique"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Bouton pour activer/désactiver la musique -->
        <Button
            android:id="@+id/toggle_music_btn"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/custom_back_button"
            android:fontFamily="@font/font6"
            android:gravity="center"
            android:paddingStart="40dp"
            android:paddingTop="12dp"
            android:paddingEnd="40dp"
            android:paddingBottom="12dp"
            android:text="@string/Desactivermusique"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Barre de navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp"
        android:background="@android:color/transparent">
    </LinearLayout>



    <!-- Barre de navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_home"
                android:scaleType="centerInside"
                android:contentDescription="Home icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/musicButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_music"
                android:scaleType="centerInside"
                android:contentDescription="music icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/favoriteButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_favorite"
                android:scaleType="centerInside"
                android:contentDescription="fav icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_settings"
                android:scaleType="centerInside"
                android:contentDescription="setting icon" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
